  </div>

  <div class="form-group string optional">
    <%= f.label "descrption", :class => "string optional control-label" %>
    <%= f.text_field :descrption, :class => "string optional form-control" %>

  </div>
  <%= f.submit "Submit", class: "btn btn-primary",data:{disable_with:"Submiting..."} %>

</div>
